<h1>Editing Book</h1>

<%= render 'books/error', book:@book %>

<%= form_with model:@book, local:true do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book), class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
